mixin ProductCard(product = {})
    .p-2.col-lg-3.mx-3(data-aos="zoom-in",data-aos-duration="1500")
        .text-center.rounded.product-img-container
            block
            div.row.justify-content-between.mx-auto.px-3.product-action
                a.text-dark.text-decoration-none(href="",title="add "+ product.name +" to cart")
                    span add to cart 
                    span 
                        i.fa.fa-plus
                a(href="", title="add " + product.name+ " to favorites")
                    span.text-danger
                        i.far.fa-heart
        .px-3.mt-1.text-center
            p #{product.name}
            p.text-muted.small <strong class="text-primary">#{product.price}</strong> EGP